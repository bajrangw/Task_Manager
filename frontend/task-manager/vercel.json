{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(?:js|css|png|jpg|jpeg|gif|svg|ico|txt|woff2?))",
      "dest": "/dist/$1"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}
